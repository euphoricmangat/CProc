<UserControl x:Class="CoreFreqWindows.GUI.SystemInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#FF0D1117">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- CPU Information -->
            <Border Grid.Row="0" Padding="15" Margin="0,0,0,15" CornerRadius="8" 
                   BorderThickness="1" BorderBrush="#FF30363D" Background="#FF161B22">
                <StackPanel>
                    <TextBlock Text="CPU Information" FontSize="16" FontWeight="SemiBold" 
                              Foreground="White" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Brand:" 
                                  Foreground="#FF8B949E" Margin="0,0,0,10"/>
                        <TextBlock x:Name="CpuBrandText" Grid.Row="0" Grid.Column="1" 
                                  Text="N/A" Foreground="White" FontWeight="Medium" Margin="0,0,0,10" TextWrapping="Wrap"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Vendor:" 
                                  Foreground="#FF8B949E" Margin="0,0,0,10"/>
                        <TextBlock x:Name="CpuVendorText" Grid.Row="1" Grid.Column="1" 
                                  Text="N/A" Foreground="White" FontWeight="Medium" Margin="0,0,0,10"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Family:" 
                                  Foreground="#FF8B949E" Margin="0,0,0,10"/>
                        <TextBlock x:Name="CpuFamilyText" Grid.Row="2" Grid.Column="1" 
                                  Text="N/A" Foreground="White" FontWeight="Medium" Margin="0,0,0,10"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Physical Cores:" 
                                  Foreground="#FF8B949E" Margin="0,0,0,10"/>
                        <TextBlock x:Name="PhysicalCoresText" Grid.Row="3" Grid.Column="1" 
                                  Text="N/A" Foreground="White" FontWeight="Medium" Margin="0,0,0,10"/>
                        
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Logical Cores:" 
                                  Foreground="#FF8B949E" Margin="0,0,0,10"/>
                        <TextBlock x:Name="LogicalCoresText" Grid.Row="4" Grid.Column="1" 
                                  Text="N/A" Foreground="White" FontWeight="Medium" Margin="0,0,0,10"/>
                        
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Architecture:" 
                                  Foreground="#FF8B949E"/>
                        <TextBlock x:Name="ArchitectureText" Grid.Row="5" Grid.Column="1" 
                                  Text="N/A" Foreground="White" FontWeight="Medium"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Cache Information -->
            <Border Grid.Row="1" Padding="15" Margin="0,0,0,15" CornerRadius="8" 
                   BorderThickness="1" BorderBrush="#FF30363D" Background="#FF161B22">
                <StackPanel>
                    <TextBlock Text="Cache Hierarchy" FontSize="16" FontWeight="SemiBold" 
                              Foreground="White" Margin="0,0,0,15"/>
                    
                    <DataGrid x:Name="CacheDataGrid" AutoGenerateColumns="False" 
                             IsReadOnly="True" Background="Transparent" Foreground="White" 
                             BorderThickness="0" HeadersVisibility="Column" GridLinesVisibility="None"
                             RowBackground="Transparent" AlternatingRowBackground="#10000000">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#FF21262D"/>
                                <Setter Property="Foreground" Value="#FF58A6FF"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Padding" Value="10,8"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="80"/>
                            <DataGridTextColumn Header="Size" Binding="{Binding Size}" Width="150"/>
                            <DataGridTextColumn Header="Associativity" Binding="{Binding Associativity}" Width="120"/>
                            <DataGridTextColumn Header="Line Size" Binding="{Binding LineSize}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- System Information -->
            <Border Grid.Row="2" Padding="15" Margin="0,0,0,15" CornerRadius="8" 
                   BorderThickness="1" BorderBrush="#FF30363D" Background="#FF161B22">
                <StackPanel>
                    <TextBlock Text="System Information" FontSize="16" FontWeight="SemiBold" 
                              Foreground="White" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Operating System:" 
                                  Foreground="#FF8B949E" Margin="0,0,0,10"/>
                        <TextBlock x:Name="OsText" Grid.Row="0" Grid.Column="1" 
                                  Text="N/A" Foreground="White" FontWeight="Medium" Margin="0,0,0,10"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="OS Version:" 
                                  Foreground="#FF8B949E" Margin="0,0,0,10"/>
                        <TextBlock x:Name="OsVersionText" Grid.Row="1" Grid.Column="1" 
                                  Text="N/A" Foreground="White" FontWeight="Medium" Margin="0,0,0,10"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Total Memory:" 
                                  Foreground="#FF8B949E" Margin="0,0,0,10"/>
                        <TextBlock x:Name="MemoryText" Grid.Row="2" Grid.Column="1" 
                                  Text="N/A" Foreground="White" FontWeight="Medium" Margin="0,0,0,10"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Motherboard:" 
                                  Foreground="#FF8B949E"/>
                        <TextBlock x:Name="MotherboardText" Grid.Row="3" Grid.Column="1" 
                                  Text="N/A" Foreground="White" FontWeight="Medium"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- BIOS/UEFI Information -->
            <Border Grid.Row="3" Padding="15" CornerRadius="8" 
                   BorderThickness="1" BorderBrush="#FF30363D" Background="#FF161B22">
                <StackPanel>
                    <TextBlock Text="BIOS/UEFI Information" FontSize="16" FontWeight="SemiBold" 
                              Foreground="White" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="BIOS Vendor:" 
                                  Foreground="#FF8B949E" Margin="0,0,0,10"/>
                        <TextBlock x:Name="BiosVendorText" Grid.Row="0" Grid.Column="1" 
                                  Text="N/A" Foreground="White" FontWeight="Medium" Margin="0,0,0,10"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="BIOS Version:" 
                                  Foreground="#FF8B949E" Margin="0,0,0,10"/>
                        <TextBlock x:Name="BiosVersionText" Grid.Row="1" Grid.Column="1" 
                                  Text="N/A" Foreground="White" FontWeight="Medium" Margin="0,0,0,10"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="BIOS Date:" 
                                  Foreground="#FF8B949E"/>
                        <TextBlock x:Name="BiosDateText" Grid.Row="2" Grid.Column="1" 
                                  Text="N/A" Foreground="White" FontWeight="Medium"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>

